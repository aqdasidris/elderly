<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="@string/choose_user_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162"
        tools:text="Select user Type" />

    <Button
        android:id="@+id/btn_choose_guardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/guardian"
        app:layout_constraintEnd_toEndOf="@+id/txt_user_type"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/txt_user_type"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_type" />

    <Button
        android:id="@+id/btn_choose_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/patient"
        app:layout_constraintEnd_toEndOf="@+id/btn_choose_guardian"
        app:layout_constraintStart_toStartOf="@+id/btn_choose_guardian"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_guardian" />
</androidx.constraintlayout.widget.ConstraintLayout>